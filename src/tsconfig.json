{
  "compilerOptions": {
    "rootDir": "./src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
    }
  },
  "exclude": ["node_modules", "public"],
  "include": ["src/**/*.ts", "src/types/**/*.d.ts"]
}
